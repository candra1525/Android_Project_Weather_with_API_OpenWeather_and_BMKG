<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GempaBumi">

    <RelativeLayout
        android:id="@+id/rl_ket_gempa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp"
        >

        <LinearLayout
            android:id="@+id/ll_kembali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_bulat"
            android:padding="6dp"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_arrow_back_24_wheater"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_keterangan"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="#417EA9"
                android:text="Gempa Bumi"
                android:layout_centerHorizontal="true"
                android:textSize="20dp"
                />


        </LinearLayout>
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_ket_gempa"
        android:background="@color/white"
        >

        <LinearLayout
            android:id="@+id/ll_gempa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/iv_lokasigempa"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="50dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tanggal"
                    android:textColor="#417EA9"
                    android:fontFamily="@font/quicksand_bold"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_tanggal_gempa"
                    android:text="0"
                    android:textColor="#417EA9"
                    android:fontFamily="@font/quicksand_bold"
                    android:textSize="15sp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jam"
                    android:textColor="#417EA9"
                    android:fontFamily="@font/quicksand_bold"
                    android:textSize="15sp"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_jam_gempa"
                    android:text="0"
                    android:textColor="#417EA9"
                    android:fontFamily="@font/quicksand_bold"
                    android:textSize="15sp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lintang"
                    android:textColor="#417EA9"
                    android:fontFamily="@font/quicksand_bold"
                    android:textSize="15sp"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_lintang_gempa"
                    android:text="0"
                    android:textColor="#417EA9"
                    android:fontFamily="@font/quicksand_bold"
                    android:textSize="15sp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bujur"
                    android:textColor="#417EA9"
                    android:fontFamily="@font/quicksand_bold"
                    android:textSize="15sp"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_bujur_gempa"
                    android:text="0"
                    android:textColor="#417EA9"
                    android:fontFamily="@font/quicksand_bold"
                    android:textSize="15sp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Magnitudo"
                    android:textColor="#417EA9"
                    android:fontFamily="@font/quicksand_bold"
                    android:textSize="15sp"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_magnitudo_gempa"
                    android:text="0"
                    android:textColor="#417EA9"
                    android:fontFamily="@font/quicksand_bold"
                    android:textSize="15sp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kedalaman"
                    android:textColor="#417EA9"
                    android:fontFamily="@font/quicksand_bold"
                    android:textSize="15sp"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_kedalaman_gempa"
                    android:text="0"
                    android:textColor="#417EA9"
                    android:fontFamily="@font/quicksand_bold"
                    android:textSize="15sp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wilayah"
                    android:textColor="#417EA9"
                    android:fontFamily="@font/quicksand_bold"
                    android:textSize="15sp"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_wilayah_gempa"
                    android:text="0"
                    android:textColor="#417EA9"
                    android:fontFamily="@font/quicksand_bold"
                    android:textSize="15sp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Potensi"
                    android:textColor="#417EA9"
                    android:fontFamily="@font/quicksand_bold"
                    android:textSize="15sp"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_potensi_gempa"
                    android:text="0"
                    android:textColor="#417EA9"
                    android:fontFamily="@font/quicksand_bold"
                    android:textSize="15sp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Potensi"
                    android:textColor="#417EA9"
                    android:fontFamily="@font/quicksand_bold"
                    android:textSize="15sp"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_dirasakan_gempa"
                    android:text="0"
                    android:textColor="#417EA9"
                    android:fontFamily="@font/quicksand_bold"
                    android:textSize="15sp"
                    />


            </LinearLayout>
        </LinearLayout>

    </ScrollView>



</RelativeLayout>