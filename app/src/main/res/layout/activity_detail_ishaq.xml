<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:background="@color/white"
    tools:context=".DetailIshaq">

    <RelativeLayout
        android:id="@+id/rl_mahasiswa1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:id="@+id/ll_back_tentang_ishaq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_bulat"
            android:padding="6dp"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_arrow_back_24_wheater"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_judulIshaq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_bold"
            android:textColor="#417EA9"
            android:textSize="20sp"
            android:text="Mahasiswa"
            android:textAlignment="center"
            android:padding="10dp"
            />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/sv_mahasiswa1"
        android:layout_below="@id/rl_mahasiswa1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:id="@+id/ll_content_ishaq"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/iv_ishaq"
                android:layout_width="200dp"
                android:layout_height="290dp"
                android:src="@drawable/ishaq"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_bold"
                android:text="Biodata"
                android:textSize="20sp"
                android:textColor="#417EA9"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="10dp"
                />
            <TableLayout
                android:id="@+id/tl_ishaq"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                >
                <TableRow
                    android:padding="6dp"
                    android:weightSum="3">
                    <TextView
                        android:text="Nama"
                        android:textColor="#417EA9"
                        android:fontFamily="@font/quicksand_bold"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_marginHorizontal="10dp"
                        android:text=":"
                        android:textColor="#417EA9"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        />
                    <TextView
                        android:text="Muhammad Ishaq Maulana"
                        android:textColor="#417EA9"
                        android:fontFamily="@font/quicksand_bold"
                        android:textSize="15sp"
                        android:layout_weight="1"/>
                </TableRow>

                <TableRow
                    android:padding="6dp"
                    android:weightSum="3">
                    <TextView
                        android:text="NPM"
                        android:textColor="#417EA9"
                        android:fontFamily="@font/quicksand_bold"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_marginHorizontal="10dp"
                        android:text=":"
                        android:textColor="#417EA9"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        />
                    <TextView
                        android:text="2125250060"
                        android:textColor="#417EA9"
                        android:fontFamily="@font/quicksand_bold"
                        android:textSize="15sp"
                        android:layout_weight="1"/>
                </TableRow>

                <TableRow
                    android:padding="6dp"
                    android:weightSum="3">
                    <TextView
                        android:text="Prodi"
                        android:textColor="#417EA9"
                        android:fontFamily="@font/quicksand_bold"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_marginHorizontal="10dp"
                        android:text=":"
                        android:textColor="#417EA9"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        />
                    <TextView
                        android:text="Informatika"
                        android:textColor="#417EA9"
                        android:fontFamily="@font/quicksand_bold"
                        android:textSize="15sp"
                        android:layout_weight="1"/>
                </TableRow>

                <TableRow
                    android:padding="6dp"
                    android:weightSum="3">
                    <TextView
                        android:text="Semester"
                        android:textColor="#417EA9"
                        android:fontFamily="@font/quicksand_bold"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_marginHorizontal="10dp"
                        android:text=":"
                        android:textColor="#417EA9"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        />
                    <TextView
                        android:text="3"
                        android:textColor="#417EA9"
                        android:fontFamily="@font/quicksand_bold"
                        android:textSize="15sp"
                        android:layout_weight="1"/>
                </TableRow>

                <TableRow
                    android:padding="6dp"
                    android:weightSum="3">
                    <TextView
                        android:text="Fakultas"
                        android:textColor="#417EA9"
                        android:fontFamily="@font/quicksand_bold"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_marginHorizontal="10dp"
                        android:text=":"
                        android:textColor="#417EA9"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        />
                    <TextView
                        android:text="Ilmu Komputer dan Rekayasa"
                        android:textColor="#417EA9"
                        android:fontFamily="@font/quicksand_bold"
                        android:textSize="15sp"
                        android:layout_weight="1"/>
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="5dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/ll_igishaq"
                    android:layout_marginVertical="5dp"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/instagram"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksand_bold"
                        android:text="Instagram"
                        android:textColor="#417EA9"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/ll_githubishaq"
                    android:layout_marginVertical="5dp"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/github"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksand_bold"
                        android:text="Github"
                        android:textColor="#417EA9"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>